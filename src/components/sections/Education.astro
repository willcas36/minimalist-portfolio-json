---
import Section from '../Section.astro';
import { education } from '@/cv';
---

<Section title="Education">
   <ul>
      {
         education.map(({ institution, startDate, endDate, area, courses }) => {
            const startYear = new Date(
               `${startDate}T00:00:00Z`
            ).getUTCFullYear();
            const endYear =
               endDate !== null
                  ? new Date(`${endDate}T00:00:00Z`).getUTCFullYear()
                  : 'Present';
            const years = `${startYear} - ${endYear}`;
            return (
               <li>
                  <article>
                     <header>
                        <div>
                           <h3>{institution}</h3>
                           <h4>{area}</h4>
                        </div>
                        <time>{years}</time>
                     </header>
                     <footer>
                        {courses && courses.map((course) => <p>{course}.</p>)}
                     </footer>
                  </article>
               </li>
            );
         })
      }
   </ul>
</Section>

<style>
   ul {
      display: flex;
      flex-direction: column;
      gap: 32px;
   }
   article h3 {
      font-weight: 500;
      color: #111;
   }
   article h4 {
      font-weight: 400;
      color: #222;
   }
   header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      margin-bottom: 4px;
   }
   time {
      color: #555;
      font-size: 0.85rem;
   }
   footer {
      margin-top: 10px;
   }
   p {
      font-size: 0.75rem;
      line-height: 0.8rem;
      margin-bottom: 8px;
   }
</style>
